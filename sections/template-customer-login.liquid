{% comment %} <div class="d-flex align-items-center justify-content-center py-5 px-4 px-md-3 px-lg-5" x-data="{ loginForm: true, pwRecoverForm: false }" style="height: 100vh;">
    <div x-show="loginForm" class="w-100" style="max-width: 28rem;">
        <div>
            <h1 class="text-center display-5 fw-bold mt-4">Sign in to your account</h1>
        </div>
        <div class="mt-4">
            {% form 'customer_login' %}
                {% if form.errors %}
                    <div class="alert alert-danger" role="alert">
                        <strong class="fw-bold">Error!</strong>
                        <p class="d-inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}
                <div class="mb-3">
                    <label for="email_address" class="form-label visually-hidden">Email address</label>
                    <input type="email"
                        name="customer[email]"
                        id="email_address"
                        autocomplete="email"
                        class="form-control"
                        placeholder="Email address"
                    >
                </div>
                {% if form.password_needed %}
                    <div class="mb-3">
                        <label for="password" class="form-label visually-hidden">Password</label>
                        <input type="password"
                            name="customer[password]"
                            id="password"
                            autocomplete="current-password"
                            class="form-control"
                            placeholder="Password"
                        >
                    </div>
                {% endif %}
                <div class="mb-3 text-muted text-sm">
                    <a x-on:click="loginForm = false; pwRecoverForm = true" href="#" class="text-decoration-underline">
                        Forgot your password?
                    </a>
                </div>
                <div>
                    <button type="submit" class="btn btn-dark w-100">
                        Sign in
                    </button>
                </div>
            {% endform %}
        </div>
    </div>




    <div x-show="pwRecoverForm" class="w-100" style="max-width: 28rem;">
        <div>
            <h1 class="text-center display-5 fw-bold mt-4">Recover your password</h1>
        </div>
        <div class="mt-4">
            {% form 'recover_customer_password' %}
                {% if form.errors %}
                    <div class="alert alert-danger" role="alert">
                        <strong class="fw-bold">Error!</strong>
                        <p class="d-inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}
                <div class="mb-3">
                    <label for="email" class="form-label visually-hidden">Email address</label>
                    <input type="email"
                        name="email"
                        id="email"
                        autocomplete="email"
                        class="form-control"
                        placeholder="Email address"
                    >
                </div>
                <div>
                    <button type="submit" class="btn btn-dark w-100">
                        Recover password
                    </button>
                </div>
                <div class="mt-4 text-muted text-sm">
                    <a x-on:click="loginForm = true; pwRecoverForm = false" href="#" class="text-decoration-underline">Back to login</a>
                </div>
            {% endform %}
        </div>
    </div>
</div> {% endcomment %}


